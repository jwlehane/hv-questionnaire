rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /ai-questionnaire-responses/{responseId} {
      allow read: if request.auth != null;
      allow write: if request.resource.data.name is string &&
                     request.resource.data.company is string &&
                     request.resource.data.aiUsageType is string &&
                     request.resource.data.usageExample is string &&
                     request.resource.data.employeeCount is number &&
                     request.resource.data.aiUserCount is number &&
                     request.resource.data.commonTools is string &&
                     request.resource.data.barriers is list &&
                     request.resource.data.barrierOtherText is string &&
                     request.resource.data.aiCrystalBall is string &&
                     request.resource.data.submittedAt == request.time;
    }
    match /login-audit-log/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}